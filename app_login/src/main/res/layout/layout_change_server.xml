<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_40"
    android:layout_marginRight="@dimen/dp_40"
    app:cardCornerRadius="@dimen/dp_8"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dp_20">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_20"
            android:text="服务器地址："
            android:textSize="@dimen/sp_16" />

        <com.divine.dy.lib_widget.widget.EditTextWithLRIcon
            android:id="@+id/change_server_host"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:background="@drawable/selector_edit_bottom_border_focus"
            android:hint="请输入服务器地址"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:textColor="@color/LoginThemeColor"
            android:textCursorDrawable="@drawable/edit_text_cursor"
            android:textSize="@dimen/sp_16" />

        <Button
            android:id="@+id/change_server_submit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_40"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@drawable/shape_blue_corner_5dp"
            android:text="确定"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/change_server_to_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@null"
            android:text="返回登录"
            android:textColor="@color/LoginThemeColor" />
    </LinearLayout>

</androidx.cardview.widget.CardView>
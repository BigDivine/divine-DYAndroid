<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="@dimen/dp_20"
    tools:context="com.divine.dy.app_login.LoginSmsActivity">

    <ImageView
        android:id="@+id/app_logo"
        android:layout_width="110dp"
        android:layout_height="170dp"
        android:layout_marginTop="@dimen/dp_45"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintBottom_toTopOf="@id/login_user_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.divine.module_widget.widget.EditTextWithClean
        android:id="@+id/login_user_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/selector_edit_bottom_border_focus"
        android:drawableLeft="@mipmap/ic_user_name_grey"
        android:drawablePadding="@dimen/dp_10"
        android:hint="请输入用户名/手机号"
        android:textSize="@dimen/sp_16"
        app:layout_constraintBottom_toTopOf="@id/sms_ver"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/app_logo" />

    <LinearLayout
        android:id="@+id/sms_ver"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/selector_edit_bottom_border_focus"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dp_2"
        app:layout_constraintBottom_toTopOf="@id/login_submit"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_user_name">

        <com.divine.module_widget.widget.EditTextWithClean
            android:id="@+id/sms_ver_text"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_38"
            android:layout_weight="1"
            android:background="@color/white"
            android:drawableLeft="@mipmap/ic_login_verification"
            android:drawablePadding="@dimen/dp_10"
            android:hint="请输入验证码"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/sms_ver_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_20"
            android:paddingRight="@dimen/dp_20"
            android:textColor="#0CA6F0"
            android:text="获取验证码"
            android:textSize="@dimen/sp_16" />
    </LinearLayout>

    <Button
        android:id="@+id/login_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/shape_blue_corner_5dp"
        android:text="登录"
        android:textColor="#ffffff"
        android:textSize="@dimen/sp_19"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sms_ver" />


</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/dp_20"
    tools:context="com.divine.dy.app_login.ChangeServerActivity">

    <TextView
        android:id="@+id/change_server_label"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_20"
        android:gravity="left"
        android:text="服务器地址："
        android:textSize="@dimen/sp_16"
        app:layout_constraintBottom_toTopOf="@id/change_server_edit"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/change_server_edit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="@drawable/selector_edit_bottom_border_focus"
        android:hint="请输入服务器地址"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:textCursorDrawable="@drawable/edit_text_cursor"
        android:textSize="@dimen/sp_16"
        app:layout_constraintBottom_toTopOf="@id/change_login_server_label"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/change_server_label" />

    <TextView
        android:id="@+id/change_login_server_label"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_20"
        android:gravity="left"
        android:text="登录服务器地址："
        android:textSize="@dimen/sp_16"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/change_login_server_edit"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/change_server_edit" />

    <EditText
        android:id="@+id/change_login_server_edit"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_40"
        android:background="@drawable/selector_edit_bottom_border_focus"
        android:hint="请输入登录服务器地址"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:textCursorDrawable="@drawable/edit_text_cursor"
        android:textSize="@dimen/sp_16"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/change_server_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/change_login_server_label" />

    <Button
        android:id="@+id/change_server_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_20"
        android:background="@drawable/shape_blue_corner_5dp"
        android:text="确定"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/change_login_server_edit" />
</androidx.constraintlayout.widget.ConstraintLayout>
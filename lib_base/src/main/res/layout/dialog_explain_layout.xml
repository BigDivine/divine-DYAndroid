<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="新建班组信息"

        android:textSize="16sp" />

    <EditText
        android:id="@+id/explain_content"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:hint="请输入班组信息"
        android:textColor="@color/SystemTextColor"
        android:textColorHint="@color/SystemTextColor"
        android:textSize="14sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/SystemTextColor" />

        <View
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:background="@color/SystemTextColor" />

        <TextView
            android:id="@+id/explain_cancel"
            android:layout_width="98dp"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:gravity="center"
            android:text="取消"

            android:textSize="13sp" />

        <TextView
            android:id="@+id/explain_confirm"
            android:layout_width="98dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:gravity="center"
            android:text="确认"
            android:textColor="@color/BaseThemeColor"
            android:textSize="13sp" />
    </RelativeLayout>
</LinearLayout>
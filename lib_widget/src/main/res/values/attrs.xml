<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CircleRelativeLayoutLayout">
        <attr name="background_color" format="color" />
        <attr name="background_alpha" format="integer" />
    </declare-styleable>
    <declare-styleable name="EllipseColorTextView">
        <attr name="ellipse_text" format="string" />
        <attr name="ellipse_background" format="color" />
        <attr name="ellipse_text_size" format="dimension" />
        <attr name="ellipse_text_color" format="color" />
        <attr name="ellipse_corner_size" format="integer" />
    </declare-styleable>
    <!-- 时间轴 -->
    <declare-styleable name="UnderLineLinearLayout">
        <!--时间轴偏移值-->
        <attr name="line_margin_side" format="dimension" />
        <!--时间轴动态调整值-->
        <attr name="line_dynamic_dimen" format="dimension" />
        <!--线宽-->
        <attr name="line_stroke_width" format="dimension" />
        <!--线的颜色-->
        <attr name="line_v_color" format="color" />
        <!--点的大小-->
        <attr name="point_size" format="dimension" />
        <!--点的颜色-->
        <attr name="point_color" format="color" />
        <!--图标-->
        <attr name="icon_src" format="reference" />
        <!--时间轴的gravity-->
        <!--the gravity of the timeline-->
        <attr name="line_gravity">
            <enum name="Left" value="2" />
            <enum name="Right" value="4" />
            <enum name="Middle" value="0" />
            <enum name="Top" value="1" />
            <enum name="Bottom" value="3" />
        </attr>
    </declare-styleable>
    <declare-styleable name="BrokenlineView">
        <attr name="X_axis_color" format="color" />
        <attr name="X_axis_text_color" format="color" />
        <attr name="X_axis_text_size" format="dimension" />
        <attr name="X_axis_width" format="dimension" />
        <attr name="broken_line_color" format="color" />
        <attr name="broken_line_width" format="dimension" />
        <attr name="broken_line_dot_color" format="color" />
        <attr name="broken_line_dot_mode" format="enum">
            <!--实心点-->
            <enum name="solid" value="0" />
            <!--空心点-->
            <enum name="hollow" value="1" />
            <!--无边框空心点-->
            <!--<enum name="frameless" value="2" />-->
        </attr>
    </declare-styleable>
    <declare-styleable name="ColorBar">
        <attr name="colorHeight" format="dimension" />
        <attr name="function" format="color" />
        <attr name="idling" format="color" />
        <attr name="rest" format="color" />
    </declare-styleable>

    <declare-styleable name="PieView">
        <attr name="centerTextSize" format="dimension" />
        <attr name="dataTextSize" format="dimension" />
        <attr name="circleWidth" format="dimension" />
        <attr name="centerTextColor" format="color" />
        <attr name="dataTextColor" format="color" />
    </declare-styleable>
    <!--自定义耗电排行电池View的自定义属性-->
    <declare-styleable name="PowerBatteryView">
        <!-- 手表低电时候的电池颜色 -->
        <attr name="batteryLowerPowerColor" format="color" />
        <!-- 手表在线时候的电池颜色 -->
        <attr name="batteryOnlineColor" format="color" />
        <!-- 手表离线时候的电池颜色 -->
        <attr name="batteryOfflineColor" format="color" />
        <!--  电池最大高度 -->
        <attr name="batteryLevelMaxHeight" format="integer" />
        <!--  电池宽度 -->
        <attr name="batteryLevelWidth" format="integer" />
        <!--  外壳的相关信息 -->
        <attr name="batteryShellCornerRadius" format="dimension" />
        <attr name="batteryShellWidth" format="dimension" />
        <attr name="batteryShellHeight" format="dimension" />
        <attr name="batteryShellStrokeWidth" format="dimension" />
        <!--  电池头的相关信息 -->
        <attr name="batteryShellHeadCornerRadius" format="dimension" />
        <attr name="batteryShellHeadWidth" format="dimension" />
        <attr name="batteryShellHeadHeight" format="dimension" />
        <!-- 电池外壳和电池等级直接的间距 -->
        <attr name="batteryGap" format="dimension" />
    </declare-styleable>
    <declare-styleable name="WaveView">
        <attr name="waveWaterLevel" format="float" />
        <attr name="amplitudeRatio" format="float" />
        <attr name="waveLengthRatio" format="float" />
        <attr name="waveShiftRatio" format="float" />
        <attr name="frontWaveColor" format="color" />
        <attr name="behindWaveColor" format="color" />
        <attr name="waveViewWaveShape" format="enum">
            <enum name="circle" value="0" />
            <enum name="square" value="1" />
        </attr>
        <attr name="showWave" format="boolean" />
    </declare-styleable>
    <!--    20241225 ADD FOR CustomRadioButton-->
    <declare-styleable name="CustomRadioButton">
        <attr name="drawable_size" format="dimension" />
        <attr name="drawable_color" format="color" />
<!--        <attr name="drawable_checkedColor" format="color" />-->
<!--        <attr name="drawable_uncheckedColor" format="color" />-->
    </declare-styleable>
</resources>

            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme"></activity>
        <activity
            android:name=".home.TabPagerFragmentActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".home.TabPager2FragmentActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".home.RadioPagerFragmentActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".home.RadioPager2FragmentActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".home.NavigatorPagerFragmentActivity"
            android:theme="@style/AppTheme" />

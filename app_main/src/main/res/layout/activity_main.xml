<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@android:color/background_light"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/TabPagerFragment"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@drawable/layer_list_edit_bottom_border_blue"
        android:gravity="center"
        android:text="TabLayout+ViewPager+Fragment"
        app:layout_constraintBottom_toTopOf="@id/TabPager2Fragment"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TabPager2Fragment"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@drawable/layer_list_edit_bottom_border_blue"
        android:gravity="center"
        android:text="TabLayout+ViewPager2+Fragment"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/TabPagerFragment" />

    <TextView
        android:id="@+id/RadioPagerFragment"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@drawable/layer_list_edit_bottom_border_blue"
        android:gravity="center"
        android:text="RadioGroup+ViewPager+Fragment"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/TabPager2Fragment" />

    <TextView
        android:id="@+id/RadioPager2Fragment"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@drawable/layer_list_edit_bottom_border_blue"
        android:gravity="center"
        android:text="RadioGroup+ViewPager2+Fragment"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/RadioPagerFragment" />

    <TextView
        android:id="@+id/NavigatorPagerFragment"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@drawable/layer_list_edit_bottom_border_blue"
        android:gravity="center"
        android:text="BottomNavigationView+ViewPager+Fragment"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/RadioPager2Fragment" />

    <TextView
        android:id="@+id/NavigatorPager2Fragment"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@drawable/layer_list_edit_bottom_border_blue"
        android:gravity="center"
        android:text="BottomNavigationView+ViewPager2+Fragment"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/WaterMarkTextView"
        app:layout_constraintTop_toBottomOf="@id/NavigatorPagerFragment" />
    <TextView
        android:id="@+id/WaterMarkTextView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@drawable/layer_list_edit_bottom_border_blue"
        android:gravity="center"
        android:text="WaterMark+TextView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/NavigatorPager2Fragment" />
</androidx.constraintlayout.widget.ConstraintLayout>